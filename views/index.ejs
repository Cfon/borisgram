<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <title>Borisgram</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" charset="utf-8"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js" charset="utf-8"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js" charset="utf-8"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.3.3/backbone-min.js" charset="utf-8"></script>
</head>

<body>
  <div class="" id="navbar">
  </div>
  <div class="container-fluid" id="main">
  </div>

  <!-- view templates -->
  <!-- navbar -->
  <template id="navBarView">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="nav-brand mr-2">Borisgram</div>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbar1" aria-controls="navbar1" aria-expanded="false" aria-label="Toggle navigation" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbar1">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/upload">Upload Photo</a>
          </li>
        </ul>
      </div>
    </nav>
  </template>

  <!-- upload photo form -->
  <template id="uploadPhotoFormView">
    <div class="ml-2 mt-3">
      <div class="form-group row">
        <label class="col-form-label col-3 col-sm-2 col-md-1" for="file">Photo</label>
        <input class="form-control-file col-8 col-md-10" type="file" id="photo">
      </div>
      <div class="form-group row">
        <label class="col-form-label col-3 col-sm-2 col-md-1" for="caption">Caption</label>
        <input class="form-control col-8 col-sm-9 col-md-10" type="text" id="caption">
      </div>
      <button class="btn btn-outline-success">Upload</button>
    </div>
  </template>

  <template id="photoView">
    <div class="mx-2 my-2">
      <img class="img-fluid" src="{{ path }}" alt="{{ caption }}">
    </div>
  </template>

  <script src="/app.js" charset="utf-8"></script>
</body>

</html>
